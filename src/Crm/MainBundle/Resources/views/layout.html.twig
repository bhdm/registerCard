<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        {% block title %}
            {% if page is defined and page.title is defined  %}
                <title>{{ page.title }}</title>
            {% else %}
                <title>Карта водителя для тахографа с СКЗИ</title>
            {% endif%}


            {% if page is defined and page.metaDescription is defined  %}
                <meta name="description" content="{{ page.metaDescription }}">
            {% else %}
                <meta name="description" content="Система подачи заявок">
            {% endif%}


            {% if page is defined and page.metaKeyword is defined  %}
                <meta name="keywords" content="{{ page.metaKeyword }}">
            {% else %}
                <meta name="keywords" content="Система подачи заявок">
            {% endif%}
        {% endblock %}
        {% block stylesheets %}
            <link href="{{ asset('bundles/crmmain/stylesheets/common.css') }}" rel="stylesheet" media="all">
            <link href="{{ asset('bundles/crmmain/lib/styler/jquery.formstyler.css') }}" rel="stylesheet" media="all">
        {% endblock %}
        {% block javascripts %}
            <script rel="script" src="{{ asset('bundles/crmmain/javascripts/jQuery.js') }}"></script>
            <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
            <script src="{{ asset('bundles/crmmain/lib/styler/jquery.formstyler.min.js') }}" type="text/javascript"></script>
            <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
            <script>
                $(document).ready(function(){
                    $('#popup-close').click(function(){
                        $('.popup').fadeOut();
                    });

                    $('#setphone').click(function(){
                        $('#pop-up-phone').css('display', 'block');
                        $('.bg-gray').css('display', 'block');
                    });

                    $('input:text,input:file,input:radio,input:password').styler();
                    $('.styler').styler();
                })
            </script>
        {% endblock %}
        <style>
            .a{
                color: #CC3333;
            }
            .a:hover{
                text-decoration: underline;
                cursor: pointer;
            }
            .close-pop-up{
                width: 32px;
                position: absolute;
                right: 0;
                top: 0;
            }
            .bg-gray{
                position: fixed;
                left: 0;
                right: 0;
                top: 0;
                bottom: 0;
                background: #555555;
                opacity: 0.5;
                z-index: 900;
                display: none;
            }
            .pop-up{
                position: fixed;
                width: 500px;
                padding: 15px;
                border: 1px solid #636363;
                border-radius: 5px;
                left: 50%;
                margin-left: -250px;
                top: 300px;
                background: #e3e3e3;
                z-index: 910;
                display: none;
            }
        </style>
    </head>
    <body>
        <div class="body">
            <header>
                <div class="center-block">
                    <table cellpading="0" cellspacing="0">
                        <tr>
                            <td style="width: 130px;padding-right: 10px;">
                                <a href="{{ path('main') }}" style="border-bottom: none;"><img src="{{ asset('bundles/crmmain/images/logo1.png') }}"></a>
                            </td>
                            <td style="width: 5px">
                                <img src="{{ asset('bundles/crmmain/images/v-line-1.jpg') }}">
                            </td>
                            <td style="width: 260px; padding-left: 20px; padding-top: 15px">
                                <a href="{{ path('main') }}" style="border-bottom: none;"><img src="{{ asset('bundles/crmmain/images/logo2.png') }}"></a>
                                <br />
                                <span class="gray" style="font-size: 14px;">Оформление&nbsp;карты&nbsp;водителя</span>
                            </td>
                            <td>
                                <br />
                                <span class="a" id="setphone">Заказать обратный звонок</span>
                            </td>
                            <td style=" width: 250px; padding-top: 15px">
                                <span class="phone">8 (812) 425 - 12 - 44</span>
                                <br />
                                <a href="{{ path('faq') }}" class="no-bootom-line"><img src="{{ asset('bundles/crmmain/images/msg.png') }}" class="msg"></a>
                                &nbsp;<span style="padding: 0 18px"> </span>&nbsp;<a href="{{ path('faq') }}"><b>задать вопрос</b></a>
                                <br />

                            </td>
                        </tr>
                    </table>
                </div>
            </header>
            {% include ("CrmMainBundle::menu.html.twig")  %}
            <div class="content">
                <br />
                {% block content %}{% endblock %}
            </div>
            {# @todo Перевести в плагин #}
        </div>
        <footer>
            <div class="center-block">
                <div style="float: left">
                    ООО "НПО ТЕХНОЛОГ" 2014 год
                </div>
                <div style="float: left; padding-left: 20px;">
                    <a href="https://money.yandex.ru" target="_blank" style="text-decoration: none; border-bottom: 0">
                        <img src="https://money.yandex.ru/img/yamoney_logo88x31.gif"
                             alt="Я принимаю Яндекс.Деньги"
                             title="Я принимаю Яндекс.Деньги" border="0" height="35"/></a>
                    &nbsp;
