{% extends 'CrmMainBundle::layout.html.twig' %}

{% block title %}
    <title>Заказать карту водителя для тахографа с СКЗИ Online</title>
    <meta name="description" content="Заказать карту водителя для тахографа с СКЗИ Online">
    <meta name="keywords" content="Заказать карту водителя для тахографа с СКЗИ Online">
{% endblock %}

{% block content %}
    <div style="text-align: center">
        <br style="clear: both"/>
            <table style="margin: 0 auto">
                <tr>
                    <td style="color: #003A68">Оформление заявки - Шаг</td>
                    <td><span class="step">1</span></td>
                    <td><span class="step">2</span></td>
                    <td><span class="step">3</span></td>
                    <td><span class="step">4</span></td>
                    <td><span class="step">5</span></td>
                    <td><span class="step-active">6 - Доставка</span></td>
                </tr>
            </table>
        <br style="clear: both"/>
    </div>
    <div class="box">
        <table>
            <tr  class="">
                <td colspan="3">
                    <div class="label" style="width: 100%; text-align: center; font-weight: bold">Информация о доставке и прошлой карте</div>
                </td>
            </tr>
            <form method="POST" action="{{ path('application-skzi-step5') }}" id="main-form">
                <tr>
                    <td colspan="3">
                        <div class="error-msg"></div>
                    </td>
                </tr>
                <tr>
                    <td class="label">Район<span class="required">*</span>:</td>
                    <td class="value">
                        <input type="text" class="style" placeholder="Район" name="region" id="region">
                    </td>
                </tr>
                <tr>
                    <td class="label">Город<span class="required">*</span>:</td>
                    <td class="value">
                        <input name="city"    id="city"     type="text" placeholder="Город"><br />
                    </td>
                </tr>
                <tr>
                    <td class="label">Улица<span class="required">*</span>:</td>
                    <td class="value">
                        <select name="typeStreet" id="typeStreet">
                            <option value="ул"     >Улица</option>
                            <option value="д"      >Дорога</option>
                            <option value="проезд"   >Проезд</option>
                            <option value="туп"    >Тупик</option>
                            <option value="ш"      >Шоссе</option>
                            <option value="тр"     >Трасса</option>
                            <option value="пер"    >Переулок</option>
                            <option value="пл"     >Площадь</option>
                            <option value="скв"    >Сквер</option>
                            <option value="алл"    >Аллея</option>
                            <option value="б-р"      >Бульвар</option>
                            <option value="пр"     >Просека</option>
                            <option value="пр-т"    >Проспект</option>
                            <option value="наб"    >Набережная</option>
                            <option value=""        >Другое</option>
                        </select>
                </tr>
                <tr>
                    <td class="label"></td>
                    <td class="value">
                        <input name="street"  id="street"   type="text" placeholder="Название улицы"><br />
                    </td>
                </tr>
                <tr>
                    <td class="label">Номер здания<span class="required">*</span>:</td>
                    <td class="value">
                        <input name="house"   id="house"    type="text" placeholder="Дом" class="little">
                        <input name="corp"    id="corp"     type="text" placeholder="Корп"  class="little">
                        <input name="dtructure"    id="structure"     type="text" placeholder="Строение"  class="little"><br />
                    </td>
                </tr>
                <tr>
                    <td class="label">Квартира / офис:</td>
                    <td class="value">
                        <select name="typeRoom" id="typeRoom">
                            <option value="кв.">Квартира</option>
                            <option value="оф.">Офис</option>
                        </select>
                        <input name="room"    id="room"  type="text" placeholder="Номер"  class="little">
                    </td>
                </tr>
                <tr>
                    <td class="label">Индекс<span class="required">*</span>:</td>
                    <td class="value">
                        <input name="zipcode" id="zipcode"  type="text" placeholder="Индекс"><br />
                </tr>
                <tr>
                    <td></td>
                </tr>
                <tr>
                    <td class="label">Выбор типа карты</td>
                    <td>
                        <select name="typeCard" id="typeCard">
                            <option value="0">Выдача первой карты</option>
                            <option value="1">Замена карты</option>
                            <option value="2">Обновление карты</option>
                        </select>
                    </td>
                    <td></td>
                </tr>
                <tr>
                    <td class="label">Номер старой карты</td>
                    <td>
                        <input name="oldNumber" id="oldNumber"  type="text" placeholder="Номер старой карты"><br />
                    </td>
                    <td></td>
                </tr>

                <tr><td colspan="2"><br /></td></tr>
                <tr>
                    <td style="text-align: right" colspan="2">
                        <span id="eulaText">Я принимаю <a href="{{ path('page',{'url' : 'eula'}) }}">условия обслуживания сайта im-kard.ru</a>&nbsp;&nbsp;&nbsp;<input type="checkbox" name="eula" id="eula"></span>
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <br />
                        <i style="font-size: 14px; color: #CC3333">* Поля отмеченные звездочкой обязательны для заполнения</i>
                        <br />
                    </td>
                </tr>
            </form>
                <tr>
                    <td></td>
                    <td style="text-align: right">
                        <br />
                        <input type="button" value="Оформить заявку" class="btn" id="submit">
                    </td>
                </tr>
        </table>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset("bundles/crmmain/lib/chosen/chosen.jquery.js") }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/crmmain/javascripts/jquery.maskedinput.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/crmmain/kladrapi/jquery.kladr.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/crmmain/javascripts/file.js') }}" type="text/javascript"></script>

    <script>
        $(document).ready(function(){

            $('input:text, select').styler();
            $("#zipcode").mask("999999");
            $.mask.definitions['h'] = "[DMP ]";
            $.mask.definitions['d'] = "[a-zA-Z0-9а-яА-Я ]";
            $('#oldNumber').mask("RUDddddddddddddd");


            $('#submit').click(function(){
                errorI = 1 ;
                error = '';
                if ( $('#region').val() == ''){
                    error += errorI+'. Поле Регион обязательно для заполнения<br />';
                    $('#region').css('borderColor', '#cc3333');
                    errorI++;
                }
                if ( $('#city').val() == ''){
                    error += errorI+'. Поле Город обязательно для заполнения<br />';
                    $('#city').css('borderColor', '#cc3333');
                    errorI++;
                }
                if ( $('#house').val() == ''){
                    error += errorI+'. Поле Дом обязательно для заполнения<br />';
                    $('#house').css('borderColor', '#cc3333');
                    errorI++;
                }
                if ( $('#zipcode').val() == ''){
                    error += errorI+'. Поле Индекс обязательно для заполнения<br />';
                    $('#zipcode').css('borderColor', '#cc3333');
                    errorI++;
                }
                if (!$('#eula').prop("checked")){
                    error += 'для регистрации нужно принять условия обслуживания сайтом <br />';
                    $('#eulaText').css('color','#CC3333');
                    $('#eulaText a').css('color','#CC3333');
                }

                if (error === ''){
                    $('#main-form').submit();
                }else{
                    $('.error-msg').fadeIn();
                    $('.error-msg').html(error);
                }
            });


            $( '#region' ).kladr({
                token: '541ee4ac7c52392c7d8b457e',
                key: '181d5e2c44994c335e5e81e9ae46e79a67b6b495',
                type: $.kladr.type.region
            });

            $('#city' ).kladr({
                token: '541ee4ac7c52392c7d8b457e',
                key: '181d5e2c44994c335e5e81e9ae46e79a67b6b495',
                parentInput: '[name="area"]',
                type: $.kladr.type.city
            });

            $('#street' ).kladr({
                token: '541ee4ac7c52392c7d8b457e',
                key: '181d5e2c44994c335e5e81e9ae46e79a67b6b495',
                parentInput: '[name="city"]',
                type: $.kladr.type.street,
                select: function(obj){
                    $('#typeStreet').val(obj.typeShort);
                    $('#typeStreet').trigger('refresh');
                }
            });
            $('#house' ).kladr({
                token: '541ee4ac7c52392c7d8b457e',
                key: '181d5e2c44994c335e5e81e9ae46e79a67b6b495',
                parentInput: '[name="street"]',
                type: $.kladr.type.building,
                select: function(obj){
                    $('#zipcode').val(obj.zip);
                    var home = obj.name.split('к');
                    $('#house').val(home[0]);
                    if (home[1] != undefined){
                        $('#corp').val(home[1]);
                    }

                }
            });

        });
    </script>
{% endblock %}

