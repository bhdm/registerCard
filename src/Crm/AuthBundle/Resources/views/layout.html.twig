        <script src="{{ asset('bundles/crmmain/jquery.inputmask/js/jquery.inputmask.date.extensions.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/paneloperator/chosen/chosen.jquery.js') }}"></script>
        <script>
            $(document).ready(function(){
                $(".date").inputmask("d.m.y",{ "placeholder": "дд.мм.гггг" });
                $('.call').click(function(){
                    $('.callbox').fadeIn();
//                    $('input:text,input:file,input:radio,input:password').styler();
                });

                $('.callboxclose').click(function(){
                    $('.callbox').fadeOut();

                });


                $('#popup-close').click(function(){
                    $('.popup').fadeOut();
                });

                $('#setphone').click(function(){
                    $('#pop-up-phone').css('display', 'block');
                    $('.bg-gray').css('display', 'block');
                });

                $('input:text,input:file,input:radio,input:password').styler();
                $('.styler').styler();

                $(".fancybox").fancybox();

                $('.callbtn').click(function(){
                    $('.callform').submit();

                });

                var nav = $('.menu');

                $(window).scroll(function () {
                    if ($(this).scrollTop() > 180) {
                        nav.addClass("f-nav");
                    } else {
                        nav.removeClass("f-nav");
                    }
                });

                $('.step').click(function(){
                    type = $('.step').attr('data-type');
                    var url = Routing.generate('application-'+type+'-step'+$(this).children('.stepn').html());
                    window.location.href = url;
                });
            })
        </script>
    {% endblock %}
    {% if form is defined %}
        {% form_theme form 'CrmAuthBundle:Form:bootstrap_3_layout.html.twig' %}
    {% endif %}
