{% extends url == null ? 'CrmMainBundle::layout.html.twig' : 'CrmMainBundle::layout_mini.html.twig' %}

{% block title %}
    <title>Заказать карту предприятия тахографа с СКЗИ, РФ. ЕСТР Online</title>
    <meta name="description" content="Быстро и удобно заказать карту предприятия для тахографов">
    <meta name="keywords" content="Заказать карту водителя, тахографы, СКЗИ, ЕСТР, РФ, онлайн продажа карт для тахографа">
{% endblock %}

{% block content %}
    <h2>Карта для юридических лиц</h2>
    <form method="POST" action="{{ path('application_company') }}" enctype="multipart/form-data">
        <div class="block-form">
            {{ form_errors(form) }}
            <table class="table-form">
                <tr>
                    <td>Тип карты<span class="required">*</span></td>
                    <td>
                        {{ form_widget(form.companyType) }}
                    </td>
                </tr>
                <tr>
                    <td>Email<span class="required">*</span></td>
                    <td>{{ form_widget(form.username) }}</td>
                    <td>Заявление <span class="mini">(форматы файла: PDF,JPG,PNG)</span></td>
                </tr>
                <tr>
                    <td>Телефон<span class="required">*</span></td>
                    <td>{{ form_widget(form.phone) }}</td>
                    <td>
                        {{ form_widget(form.fileOrder) }}
                    </td>
                </tr>
                <tr>
                    <td>Тип заявления<span class="required">*</span></td>
                    <td>
                        {{ form_widget(form.orderType) }}
                    </td>
                    <td>Заявление <span class="mini">(лист 2)</span></td>
                </tr>
                <tr>
                    <td>Количество карт<span class="required">*</span></td>
                    <td>{{ form_widget(form.cardAmount) }}</td>
                    <td>
                        {{ form_widget(form.fileOrderTwo) }}
                    </td>
                </tr>
            </table>
        </div>
        <hr>
        <div class="block-form" >
            <table class="table-form">
                <caption>Информация о предприятии</caption>
                <tr>
                    <td>Полное наименование организации<span class="required">*</span></td>
                    <td>{{ form_widget(form.companyFullTitle) }}</td>
                </tr>
                <tr>
                    <td>Сокращенное наименование организации<span class="required">*</span></td>
                    <td>{{ form_widget(form.companyTitle) }}</td>
                </tr>
                <tr>
                    <td>В лице<span class="required">*</span></td>
                    <td>{{ form_widget(form.companyExecutive) }}</td>
                    <td>Копия ИНН <span class="mini">(форматы файла: PDF,JPG,PNG)</span></td>
                </tr>
                <tr>
                    <td>ИНН<span class="required">*</span></td>
                    <td>
                        {{ form_widget(form.companyInn) }}
                    </td>
                    <td>
                        {{ form_widget(form.fileInn) }}
                    </td>
                </tr>
                <tr>
                    <td>КПП<span class="required">*</span></td>
                    <td>{{ form_widget(form.companyKpp) }}</td>
                    <td>Копия ОГРН <span class="mini">(форматы файла: PDF,JPG,PNG)</span></td>
                </tr>
                <tr>
                    <td>ОГРН<span class="required">*</span></td>
                    <td>{{ form_widget(form.companyOgrn) }}</td>
                    <td>
                        {{ form_widget(form.fileOgrn) }}
                    </td>
                </tr>
            </table>
        </div>
        <hr>
        <div class="block-form" >
            <table class="table-form">
                <caption>Юридический адрес</caption>
                <tr>
                    <td class="label">Регион<span class="required">*</span>:</td>
                    <td class="value">
                        {{ form_widget(form.legalAdrs.region) }}
                    </td>
                </tr>
                <tr>
                    <td class="label">Район:</td>
                    <td class="value">
                        {{ form_widget(form.legalAdrs.area) }}
                    </td>
                </tr>
                <tr>
                    <td class="label">Город:</td>
                    <td class="value">
                        {{ form_widget(form.legalAdrs.city) }}
                    </td>
                </tr>
                <tr>
                    <td class="label">Улица:</td>
                    <td class="value">
                        {{ form_widget(form.legalAdrs.street) }}
                    </td>
                </tr>
                <tr>
                    <td class="label">Номер здания<span class="required">*</span>:</td>
                    <td class="value">
                        {{ form_widget(form.legalAdrs.house) }}
                        {{ form_widget(form.legalAdrs.corp) }}
                        {{ form_widget(form.legalAdrs.structure) }}
                    </td>
                </tr>
                <tr>
                    <td class="label">Кв./оф.</td>
                    <td class="value">
                        <input type="hidden" name="legal[typeRoom]" id="legal-typeRoom" value="кв.">
                        {{ form_widget(form.legalAdrs.room) }}
                    </td>
                </tr>
                <tr>
                    <td class="label">Индекс<span class="required">*</span>:</td>
                    <td class="value">
                        {{ form_widget(form.legalAdrs.zipcode) }}
                </tr>
            </table>
        </div>
        <hr>
        <div class="block-form" >
            <table class="table-form">
                <caption>Почтовый адрес</caption>
                <tr>
                    <td class="label">Регион<span class="required">*</span>:</td>
                    <td class="value">
                        {{ form_widget(form.mailingAdrs.region) }}
                    </td>
                </tr>
                <tr>
                    <td class="label">Район:</td>
                    <td class="value">
                        {{ form_widget(form.mailingAdrs.area) }}
                    </td>
                </tr>
                <tr>
                    <td class="label">Город:</td>
                    <td class="value">
                        {{ form_widget(form.mailingAdrs.city) }}
                    </td>
                </tr>
                <tr>
                    <td class="label">Улица:</td>
                    <td class="value">
                        {{ form_widget(form.mailingAdrs.street) }}
                    </td>
                </tr>
                <tr>
                    <td class="label">Номер здания<span class="required">*</span>:</td>
                    <td class="value">
                        {{ form_widget(form.mailingAdrs.house) }}
                        {{ form_widget(form.mailingAdrs.corp) }}
                        {{ form_widget(form.mailingAdrs.structure) }}
                    </td>
                </tr>
                <tr>
                    <td class="label">Кв./оф.</td>
                    <td class="value">
                        <input type="hidden" name="mailing[typeRoom]" id="mailing-typeRoom" value="кв.">
                        {{ form_widget(form.mailingAdrs.room) }}
                    </td>
                </tr>
                <tr>
                    <td class="label">Индекс<span class="required">*</span>:</td>
                    <td class="value">
                        {{ form_widget(form.mailingAdrs.zipcode) }}
                </tr>
            </table>
        </div>
        <hr>
        <div class="block-form">
            <table class="table-form">
                <caption>Данные о руководителе</caption>
                <tr>
                    <td>Фамилия<span class="required">*</span></td>
                    <td>{{ form_widget(form.lastName) }}</td>
                </tr>
                <tr>
                    <td>Имя<span class="required">*</span></td>
                    <td>{{ form_widget(form.firstName) }}</td>
                </tr>
                <tr>
                    <td>Отчество<span class="required">*</span></td>
                    <td>{{ form_widget(form.surName) }}</td>
                </tr>
                <tr>
                    <td>Должность<span class="required">*</span></td>
                    <td>{{ form_widget(form.post) }}</td>
                    <td>Приказ <span class="mini">(форматы файла: PDF,JPG,PNG)</span></td>
                </tr>
                <tr>
                    <td>Действующего на основании<span class="required">*</span></td>
                    <td>{{ form_widget(form.documentAccess) }}</td>
                    <td>
                        {{ form_widget(form.fileDecree) }}
                    </td>
                </tr>
                <tr>
                    <td>&nbsp;</td>
                </tr>
            </table>
        </div>
        <hr>
        <div class="block-form">
            <table class="table-form">
                <caption>Данные о лицензии ФСБ (для мастерских)</caption>
                <tr>
                    <td>Номер</td>
                    <td>{{ form_widget(form.licenseNumber) }}</td>
                    <td>
                        Лицензия ФСБ <span class="mini">(форматы файла: PDF,JPG,PNG)</span>
                    </td>
                </tr>
                <tr>
                    <td>Кем выдана</td>
                    <td>{{ form_widget(form.licenseIssued) }}</td>
                    <td>
                        {{ form_widget(form.fileLicense) }}
                    </td>
                </tr>
                <tr>
                    <td>Дата выдачи</td>
                    <td>{{ form_widget(form.licenseDateStart) }}</td>
                </tr>
                <tr>
                    <td>Дата окончания</td>
                    <td>{{ form_widget(form.licenseDateEnd) }}</td>
                </tr>
                <tr>
                    <td>Номер приказа</td>
                    <td>{{ form_widget(form.licenseDecreeNumber) }}</td>
                </tr>
                <tr>
                    <td>Дата приказа</td>
                    <td>{{ form_widget(form.licenseDecreeDate) }}</td>
                </tr>
                <tr>
                    <td>&nbsp;</td>
                </tr>
                <tr>
                    <td style="vertical-align: top; padding-top: 10px">Подпись<span class="required">*</span></td>
                    <td colspan="2">
                        <div class="file-container">
                            <input type="file" name="signFile" id="signFile" class="fileAjax"  required="required">
                            <progress class="progress" value="0" max="100" style="width: 270px"></progress>
                            <br />
                            <br />
                            <div class="fileDoc">
                                {% if order.signFilePath is defined %}
                                    <img src="{{ path('get_image', {'type' : 'sign'}) }}" brightness="0" contrast="0">
                                {% else %}
                                    <img src="" brightness="0" contrast="0">
                                {% endif %}
                            </div>
                            <div class="navigateFile">
                                <img src="{{ asset('bundles/crmmain/icons/rotateLeft.png') }}" class="rotateLeft" title="Повернуть налево">
                                <img src="{{ asset('bundles/crmmain/icons/rotateRight.png') }}" class="rotateRight" title="Повернуть вправо">
                                <div style="display: inline-block">
                                    <span class="cropImage minibtn" title="Обрезать изображение">Обрезать</span>
                                    <br />
                                    <br />
                                </div>

                            </div>
                            <input type="hidden" id="x1" name="x1">
                            <input type="hidden" id="y1" name="y1">
                            <input type="hidden" id="x2" name="x2">
                            <input type="hidden" id="y2" name="y2">
                        </div>
                    </td>
                </tr>
                {{ form_row(form._token) }}
                <tr>
                    <td></td>
                    <td>
                        <br />
                        <input type="submit" value="Далее" class="btn" id="submit">
                    </td>
                </tr>
            </table>
        </div>
    </form>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/crmmain/kladrapi/jquery.kladr.min.css') }}" rel="stylesheet" media="all">
    <link href="{{ asset('bundles/crmmain/tapmodo-Jcrop/css/jquery.Jcrop.min.css') }}" rel="stylesheet" media="all">
    <style>
        .table-form{
            width: 800px;
        }
        .table-form caption{
            color: #005596;
            text-align: left;
            padding: 10px;
        }
        .table-form tr td:first-child{
            text-align: right;
            width: 230px;
            padding-right: 10px;
        }
