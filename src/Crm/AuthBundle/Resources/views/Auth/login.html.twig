{% extends 'CrmAuthBundle::layout.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-xs-5">
            <h2>Авторизация</h2>
            <form class="row" method="post" action="login_check">
                {% if error %}
                    <div class="error">{{ error.message }}</div>
                {% endif %}
                <div>
                    <div class="form-group">
                        <label class="control-label required">Email</label>
                        <input type="email" id="" name="_username" required="required" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label required">Пароль</label>
                        <input type="password" id="" name="_password" required="required" class="form-control" />
                    </div>
                    <div class="form-group" style="text-align: right">
                        <a href="{{ path('auth_register') }}">Зарегистрироваться</a>
                        <span style="padding: 0 10px">&nbsp;</span>
                        <button type="submit" id="" class="btn-primary btn">Войти</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}