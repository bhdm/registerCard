{% extends 'PanelOperatorBundle::layout.html.twig' %}


{% block crosh %}
    <a href="{{ path('operator_main') }}">Главная</a> &raquo;
    <a href="{{ path('operator_user_list') }}">Пользователи</a> &raquo;
    <a href="#">Испорт Почты</a>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-sm-6">
            <form method="post" class="form-horizontal" enctype="multipart/form-data">
                {% if txt != null %}
                    <div class="alert">
                        {{ txt | raw }}
                    </div>
                {% endif %}
                <div class="form-group">
                    <label class="col-sm-4">Файл CSV:</label>
                    <div class="col-sm-8">
                        <input type="file" class="" name="csv">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-8 col-sm-offset-4 text-right">
                        <button type="submit" class="btn btn-primary">Импорт</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}