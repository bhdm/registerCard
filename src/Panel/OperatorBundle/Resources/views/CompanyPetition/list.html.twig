{% extends 'PanelOperatorBundle::layout.html.twig' %}


{% block breadcrumb %}
    <ul class="breadcrumb well">
        <li>Список Ходатайств</li>
        <li><a href="{{ path('panel_petition_add') }}"><span class="btn btn-primary">Добавить</span></a></li>
    </ul>
{% endblock %}

{% block content %}
<div class="well">
    <table class="table" data-toggle="table"
           data-sort-name="login"
           data-sort-order="asc">
        <thead>
        <tr>
            <th>Название</th>
            <th></th>
            <th></th>
            <th class="setting">Инструменты</th>
        </tr>
        </thead>
        {% for o in petitions %}
            <tr>
                <td>
                    <a href="{{ path('panel_petition_edit',{'id' : o.id }) }}">
                        {{ o.title }}
                    </a>
                </td>
                <td></td>
                <td></td>
                <td class="setting">
                    {% spaceless %}
                        &nbsp;&nbsp;
                        <a href="{{ path('panel_petition_remove',{'id' : o.id}) }}">
                            <button type="button" class="btn btn-default btn-danger" title="Удалить">
                                <span class="glyphicon glyphicon-remove"></span>
                            </button>
                        </a>
                    {% endspaceless %}
                </td>
            </tr>
        {% endfor%}
    </table>
</div>
{% endblock %}