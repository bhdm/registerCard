{% extends 'CrmMainBundle::layout_new.html.twig' %}

{% block title %}
    <title>Нормативные документы по тахографам с СКЗИ</title>
    <meta name="description" content="Нормативные документы по тахографам с СКЗИ">
    <meta name="keywords" content="Нормативные документы по тахографам с СКЗИ">
{% endblock %}

{% block content %}
    <div class="container">
        <h2>Документы</h2>
        <table class="table" cellpadding="0" cellspacing="0" border="0">
            {% for document in documents %}
                <tr>
                    <td style="vertical-align: middle; width: 120px" class="doc-type">
                       <div style="display: inline-block; padding-top: 4px; padding-left: 10px">{{ document.type }}</div>
                       <div style="float: right; padding-right: 15px">
                           <img src="{{ asset('bundles/crmmain/images/ico-doc.png') }}">
                       </div>
                    </td>
                    <td>
                        <a href="{{ path('document',{ id : document.id }) }}">{{ document.title }}</a>
                    </td>
                </tr>
            {% endfor %}
        </table>
        <br />
        <br />
        <br />
        <br />
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .box .table{
            width: 100%;
        }
        .box .table tr td{
            padding: 5px;
        }

        .box .table tr:hover td{
            /*border-bottom: 1px dashed #1a5f89;*/
        }
        tr:hover .doc-type{
            background: #004B84;
            cursor: pointer;
        }
    </style>
{% endblock %}