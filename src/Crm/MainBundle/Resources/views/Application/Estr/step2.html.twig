                        <input type="hidden" name="typeRoom" id="typeRoom" value="кв.">
                        <input name="room"    id="room"  type="text" placeholder="Номер"  class="little"  value="{{ order.r_room is defined ? order.r_room : '' }}">
                    </td>
                </tr>
                <tr class="tehnolog-n">
