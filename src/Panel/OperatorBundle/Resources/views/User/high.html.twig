{% extends 'PanelOperatorBundle::layout.html.twig' %}

{% block content %}
    <table class="table">
        <tr>
            <th colspan="2">
                Найдено: {{ users | length }} шт.
            </th>
            <th>
                <select name="operator">
                    {% for o in operators %}
                        <option value="{{ o.id }}">{{ o }}</option>
                    {% endfor %}
                </select>
            </th>
            <th>
                <select name="company">
                    {% for c in companies %}
                        <option value="{{ c.id }}">{{ c }}</option>
                    {% endfor %}
                </select>
            </th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
        <tr>
            <th>ID</th>
            <th>Дата заявки</th>
            <th>Оператор</th>
            <th>Компания</th>
            <th>ФИО</th>
            <th>Статус</th>
            <th>Цена</th>
        </tr>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}<td>
                <td>{{ user.created | date('d.m.Y') }}</td>
                <td>{{ user.company.operator }}</td>
                <td>{{ user.company }}</td>
                <td>{{ user }}</td>
                <td>{{ user.statusStringTwig |raw }}</td>
                <td>{{ user.price }}</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}