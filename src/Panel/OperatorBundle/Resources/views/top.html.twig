{% if app.request.attributes.get('_route_params').type is defined %}
    {% set f_type = app.request.attributes.get('_route_params').type %}
{% else %}
    {% set f_type = 'null' %}
{% endif %}

{% if app.request.attributes.get('_route_params').status is defined %}
    {% set f_status = app.request.attributes.get('_route_params').status %}
{% else %}
    {% set f_status = 'null' %}
{% endif %}

{% if app.request.query.all.dateStart is defined %}
    {% set f_dateStart = app.request.query.all.dateStart %}
{% else %}
    {% set f_dateStart = '' %}
{% endif %}

{% if app.request.query.all.dateEnd is defined %}
    {% set f_dateEnd = app.request.query.all.dateEnd %}
{% else %}
    {% set f_dateEnd = '' %}
{% endif %}

{% if app.request.query.all.search is defined %}
    {% set f_search = app.request.query.all.search %}
{% else %}
    {% set f_search = '' %}
{% endif %}

{% set searchLine = '?dateStart='~f_dateStart~'&dateEnd='~f_dateEnd~'&search='~f_search %}

<div class="well">
    <ul class="nav nav-tabs">
        <li class="{{ app.request.attributes.get('_route') == 'panel_user_list' ? 'active' : '' }}">
            {% if app.request.attributes.get('_route_params').company is defined and app.request.attributes.get('_route_params').company != null %}
                <a href="{{ path('panel_user_list', {'type' :  f_type , 'company' : app.request.attributes.get('_route_params').company }) }}{{ searchLine }}" class="active">Новые заявки {{ render_hinclude(path('panel_user_get_new')) }}</a>
            {% elseif app.request.attributes.get('_route_params').operator is defined and app.request.attributes.get('_route_params').operator != null %}
                <a href="{{ path('panel_user_list', {'type' :  f_type , 'company' : 'null', 'operator' : app.request.attributes.get('_route_params').operator }) }}{{ searchLine }}" class="active">Новые заявки {{ render_hinclude(path('panel_user_get_new')) }}</a>
            {% else %}
                <a href="{{ path('panel_user_list') }}{{ searchLine }}" class="active">Новые заявки {{ render_hinclude(path('panel_user_get_new')) }}</a>
            {% endif %}
        </li>
        <li class="{{ app.request.attributes.get('_route') == 'panel_user_choose' ? 'active' : '' }}">
            {% if app.request.attributes.get('_route_params').company is defined and app.request.attributes.get('_route_params').company != null %}
                <a href="{{ path('panel_user_choose', {'type' :  f_type , 'company' : app.request.attributes.get('_route_params').company }) }}{{ searchLine }}" class="active">Подтвержденные</a>
            {% elseif app.request.attributes.get('_route_params').operator is defined and app.request.attributes.get('_route_params').operator != null %}
                <a href="{{ path('panel_user_choose', {'type' :  f_type , 'company' : 'null', 'operator' : app.request.attributes.get('_route_params').operator }) }}{{ searchLine }}" class="active">Подтвержденные</a>
            {% else %}
                <a href="{{ path('panel_user_choose') }}{{ searchLine }}" class="active">Подтвержденные</a>
            {% endif %}
        </li>
        <li class="{{ app.request.attributes.get('_route') == 'panel_user_production' ? 'active' : '' }}">
            {% if app.request.attributes.get('_route_params').company is defined and app.request.attributes.get('_route_params').company != null %}
                <a href="{{ path('panel_user_production', {'type' :  f_type , 'company' : app.request.attributes.get('_route_params').company }) }}{{ searchLine }}" class="active">В производстве</a>
            {% elseif app.request.attributes.get('_route_params').operator is defined and app.request.attributes.get('_route_params').operator != null %}
                <a href="{{ path('panel_user_production', {'type' :  f_type , 'company' : 'null', 'operator' : app.request.attributes.get('_route_params').operator }) }}{{ searchLine }}" class="active">В производстве</a>
            {% else %}
                <a href="{{ path('panel_user_production') }}{{ searchLine }}" class="active">В производстве</a>
            {% endif %}
        </li>
        <li class="">
            {% if app.request.attributes.get('_route_params').company is defined and app.request.attributes.get('_route_params').company != null %}
                <a href="{{ path('panel_user_arhive', {'type' :  f_type , 'company' : app.request.attributes.get('_route_params').company }) }}{{ searchLine }}" class="active">Архив</a>
            {% elseif app.request.attributes.get('_route_params').operator is defined and app.request.attributes.get('_route_params').operator != null %}
                <a href="{{ path('panel_user_arhive', {'type' :  f_type , 'company' : 'null', 'operator' : app.request.attributes.get('_route_params').operator }) }}{{ searchLine }}" class="active">Архив</a>
            {% else %}
                <a href="{{ path('panel_user_arhive') }}{{ searchLine }}" class="active">Архив</a>
            {% endif %}
        </li>
    </ul>
</div>