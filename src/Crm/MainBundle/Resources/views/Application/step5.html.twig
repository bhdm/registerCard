    <script>



        $(document).ready(function(){

            $('input:text, select').styler();
            $(".snils").mask("999-999-999 99");



            $('#tehnolog').change(function(){
                if($('#tehnolog').prop("checked")){
                    $('#tehnolog-filebox').css('display','none');
                }else{
                    $('#tehnolog-filebox').css('display','block');
                }
            });

            $('#submit').click(function(){
                errorI = 1 ;
                error = '';


                if ( $('#snils').val() == ''){
                    error += errorI+'. Поле номер СНИЛС обязательно для заполнения<br />';
                    $('#driverPlace').css('borderColor', '#cc3333');
                    errorI++;
                }

                if ( $('#photoFile').val() == '' && $('.fileDoc').children('img').eq(0).attr('src') == ''){
                    error += errorI+'. Загрузите пожалуйста фотографию<br />';
                    $('#photoFile').css('borderColor', '#cc3333');
                    errorI++;
                }
                if ( $('#signFile').val() == '' && $('.fileDoc').children('img').eq(1).attr('src') == ''){
                    error += errorI+'. Загрузите пожалуйста скан подписи<br />';
                    $('#signFile').css('borderColor', '#cc3333');
                    errorI++;
                }
                if ( $('#snilsFile').val() == '' && $('.fileDoc').children('img').eq(2).attr('src') == ''){
                    error += errorI+'. Загрузите пожалуйста скан снилса<br />';
                    $('#snilsFile').css('borderColor', '#cc3333');
                    errorI++;
                }

                if (error === ''){
                    $('#main-form').submit();
                }else{
                    $('.error-msg').fadeIn();
                    $('.error-msg').html(error);
                }
            });
        });
    </script>
