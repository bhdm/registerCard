                <a href="{{ path('auth_profile') }}">Профиль</a>
            </li>
            <li>
                <a href="{{ path('auth_order') }}">Мои заказы</a>
            </li>
            <li>
                <a href="#">Мои ходатайства</a>
            </li>
            <li>
                <a href="#">Мои сообщения</a>
            </li>
            <li>
                <hr />
            </li>
            <li>
                <a href="{{ path('auth_security_logout') }}">Выйти</a>
            </li>
        </ul>
    </div>
    {% endif %}
    <!-- /#sidebar-wrapper -->

    <!-- Page Content -->
    <div id="page-content-wrapper">
        <h1>{% block title %}{% endblock %}</h1>
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    {% block body %}{% endblock %}
                </div>
            </div>
        </div>
    </div>
    <!-- /#page-content-wrapper -->

</div>
