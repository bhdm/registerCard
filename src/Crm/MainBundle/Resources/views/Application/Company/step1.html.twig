{% extends  'CrmMainBundle::layout.html.twig'  %}

{% block title %}
    <title>Заказать карту предприятия тахографа с СКЗИ, РФ. ЕСТР Online</title>
    <meta name="description" content="Быстро и удобно заказать карту предприятия для тахографов">
    <meta name="keywords" content="Заказать карту водителя, тахографы, СКЗИ, ЕСТР, РФ, онлайн продажа карт для тахографа">
{% endblock %}

{% block content %}
    <div class="box">
        <table>
            <form method="POST" action="{{ path('application-company') }} "  id="main-form">
                <tr>
                    <td colspan="3">
                        <div class="error-msg"></div>
                    </td>
                </tr>
                <tr>
                    <td class="label">E-mail<span class="required">*</span>:</td>
                    <td class="value">
                        <input name="email" id="email" type="text" placeholder="Укажите вашу почту" required value="{{ order.email is defined ? order.email : '' }}">
                    </td>
                    <td class="emailStatus" rowspan="2" style="padding-left: 10px; font-size: 12px">
                    </td>
                </tr>
                <tr>
                    <td class="label">Телефон<span class="required">*</span>:</td>
                    <td class="value">
                        <input name="phone" id="phone" type="text" placeholder="Укажите ваш телефон" required="" value="{{ order.phone is defined ? order.phone : '' }}">
                    </td>
                </tr>
                <tr><td>&nbsp;</td></tr>
                <tr><td colspan="2"><b>Данные о руководителе</b></td></tr>
                <tr>
                    <td class="label">Фамилия</td>
                    <td class="value">
                        <input type="text" name="director[lastName]">
                    </td>
                </tr>
                <tr>
                    <td class="label">Имя</td>
                    <td class="value">
                        <input type="text" name="director[firstName]">
                    </td>
                </tr>
                <tr>
                    <td class="label">Отчество</td>
                    <td class="value">
                        <input type="text" name="director[surName]">
                    </td>
                </tr>
                <tr>
                    <td class="label">Должность</td>
                    <td class="value">
                        <input type="text" name="director[post]">
                    </td>
                </tr>
                <tr>
                    <td class="label">Действующиего на основании</td>
                    <td class="value">
                        <input type="text" name="director[docType]">
                    </td>
                </tr>
                <tr>
                    <td class="label">
                        Приказ о назначении ответственного лица
                        <span class="required">*</span>
                    </td>
                    <td>
                        <input type="file" name="passportFile" id="passportFile" class="fileAjax"  >
                    </td>
                </tr>


                <tr>
                    <td class="label">
                        Свидетельство ИП/ОГРН/ОГРНИП
                        <span class="required">*</span>
                    </td>
                    <td>
                        <input type="file" name="passportFile" id="passportFile" class="fileAjax"  >
                    </td>
                </tr>
                <tr>
                    <td class="label">
                        Свидетельство ИНН.
                        <span class="required">*</span>
                    </td>
                    <td>
                        <input type="file" name="passportFile" id="passportFile" class="fileAjax"  >
                    </td>
                </tr>
                <tr>
                    <td class="label">
                        Подпись ответственного лица
                        <span class="required">*</span>
                    </td>
                    <td style="width: 400px; vertical-align: top;">
                        {# Тут сама фото #}
                        <div class="file-container">
                            <input type="file" name="passportFile" id="passportFile" class="fileAjax"  >
                            <progress class="progress" value="0" max="100" style="width: 270px"></progress>
                            <br />
                            <br />
                            <div class="fileDoc">
                                <img src="" brightness="0" contrast="0">
                            </div>
                            <div class="navigateFile">
                                <div class="slider-box">
                                    <div id="slider-vertical-1" class="slider-vertical-contrast"></div>
                                    <img src="{{ asset('bundles/crmmain/icons/contrast-2.png') }}"  title="Контрастность">
                                </div>
                                <div class="slider-box">
                                    <div id="slider-vertical-2" class="slider-vertical-brightness"></div>
                                    <img src="{{ asset('bundles/crmmain/icons/brightness-2.png') }}" title="Яркость">
                                </div>
                                <img src="{{ asset('bundles/crmmain/icons/rotateLeft.png') }}" class="rotateLeft" title="Повернуть налево">
                                <img src="{{ asset('bundles/crmmain/icons/rotateRight.png') }}" class="rotateRight" title="Повернуть вправо">
                                {#<img src="{{ asset('bundles/crmmain/icons/crop.png') }}" class="cropImage" title="Обрезать изображение">#}
                                <div style="display: inline-block">
                                    <span class="cropImage minibtn" title="Обрезать изображение">Обрезать</span>
                                    <br />
                                    <br />
                                </div>

                            </div>
                            <input type="hidden" id="x1" name="x1">
                            <input type="hidden" id="y1" name="y1">
                            <input type="hidden" id="x2" name="x2">
                            <input type="hidden" id="y2" name="y2">
                        </div>
                    </td>
                </tr>
                <tr>
                    <td colspan="2">Адрес доставки</td>
                </tr>
                {% include 'PanelOperatorBundle:Form:Adrs.html.twig' %}
                <tr>
                    <td></td>
                </tr>

                <tr>
                    <td class="label">
                        Заполненное Заявление в формате pdf. (Скачать на сайте).
                        <span class="required">*</span>
                    </td>
                    <td>
                        <input type="file" name="passportFile" id="passportFile" class="fileAjax"  >
                    </td>
                </tr>
                <tr><td colspan="2"><br /></td></tr>
                <tr>
                    <td style="text-align: right" colspan="2">
                        <span id="eulaText">Я принимаю <a href="{{ path('page',{'url' : 'eula'}) }}">условия обслуживания сайта im-kard.ru</a>&nbsp;&nbsp;&nbsp;<input type="checkbox" name="eula" id="eula"
                                    {{ order.success is defined ? 'checked="checked"' : '' }}></span>
                    </td>
                </tr>
            </form>
            <tr><td colspan="2">
                    <br />
                    <i style="font-size: 14px; color: #CC3333">* Поля отмеченные звездочкой обязательны для заполнения</i>
                    <br />
                </td></tr>
            <tr>
                <td></td>
                <td style="text-align: right">
                    <input type="button" value="Далее" class="btn" id="submit">
                </td>
            </tr>
        </table>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset("bundles/crmmain/lib/chosen/chosen.jquery.js") }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/crmmain/javascripts/jquery.maskedinput.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/crmmain/javascripts/file.js') }}" type="text/javascript"></script>

    <script>
        $(document).ready(function(){

            $('input:text, select').styler();
            $("#phone").mask("+7 (999) 999-9999");

            $('#submit').click(function(){

                $('#rezident-hidden').val($('#rezident').val());
                errorI = 1 ;
                error = '';
                if ( $('#email').val() == ''){
                    error += errorI+'. Поле Email обязательно для заполнения<br />';
                    $('#email').css('borderColor', '#cc3333');
                    errorI++;
                }

                if ( $('#phone').val() == ''){
                    error += errorI+'. Поле Телефон обязательно для заполнения<br />';
                    $('#phone').css('borderColor', '#cc3333');
                    errorI++;
                }

                if (error === ''){
                    $('#main-form').submit();
                }else{
                    $('.error-msg').fadeIn();
                    $('.error-msg').html(error);
                }
            });

        });
    </script>
{% endblock %}

