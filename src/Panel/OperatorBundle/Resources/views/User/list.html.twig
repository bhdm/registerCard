{% extends 'PanelOperatorBundle::layout.html.twig' %}


{% block breadcrumb %}
    <ul class="breadcrumb well">
        <li>Список заявок</li>
        {#<li><a href="{{ path('user_add') }}"><span class="btn btn-primary">Добавить</span></a></li>#}
    </ul>
{% endblock %}

{% block content %}
    <div class="well">
        <table class="table" data-toggle="table"
               data-sort-name="login"
               data-sort-order="asc">
            <thead>
            <tr>
                <th>Статус</th>
                <th>Дата</th>
                <th >Компания</th>
                <th >ФИО / Email</th>
                <th class="setting">Инструменты</th>
            </tr>
            </thead>
            {% if users[0] != null %}
                <tr>
                    <td>
                        <h3>СКЗИ</h3>
                    </td>
                </tr>
                {% for user in users[0] %}
                    <tr>

                        <td>{{ user.statusStringTwig | raw }}</td>
                        <td class="subtitles">{{ user.created | date('d.m.Y') }}</td>
                        <td>{{ user.company }}</td>
                        <td>
                            {{ user }}
                            <br />
                            <span class="subtitles">{{ user.email }}</span>
                        </td>
                        <td class="setting">
                            {% spaceless %}
                                {#<a href="{{ path('user_edit',{'id' : item.id}) }}">#}
                                <a href="#">
                                    <button type="button" class="btn btn-default btn-bg">
                                        <span class="glyphicon glyphicon-pencil"></span>
                                    </button>
                                </a>
                                &nbsp;&nbsp;
                                <a href="#">
                                    <button type="button" class="btn btn-default btn-success">
                                        <span class="glyphicon glyphicon-ok"></span>
                                    </button>
                                </a>
                                &nbsp;&nbsp;
                                <a href="#">
                                    <button type="button" class="btn btn-default btn-danger">
                                        <span class="glyphicon glyphicon-remove"></span>
                                    </button>
                                </a>
