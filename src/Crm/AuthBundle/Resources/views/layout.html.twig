    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Личный кабинет</title>
    {% block stylesheets %}
        <link href="{{ asset('bundles/crmauth/css/bootstrap.min.css') }}" rel="stylesheet">
        <link href="{{ asset('bundles/crmauth/css/sidebar.css') }}" rel="stylesheet">
    {% endblock %}
    {% if form is defined %}
        {% form_theme form 'CrmAuthBundle:Form:bootstrap_3_layout.html.twig' %}
