{% spaceless %}
    <?xml version="1.0" encoding="utf-8"?>
    <ns2:EstrPackage xmlns:ns2="http://www.example.org/">
        <PackageInfo>
            <OvkId>INFMX</OvkId>
        </PackageInfo>
        <Order>
            <OrderNumber></OrderNumber>
            <OrderKind>OrderNew</OrderKind>
            <DriverOrder>
                <PersonInfo>
                    <NameFirst>{{ user.firstName }}</NameFirst>
                    <NameFirstLat>{{ user.enFastName }}</NameFirstLat>
                    <NameMiddle>{{ user.surName }}</NameMiddle>
                    <NameMiddleLat>{{ user.enSurName }}</NameMiddleLat>
                    <NameLast>{{ user.lastName }}</NameLast>
                    <NameLastLat>{{ user.enLastName }}</NameLastLat>
                    <BirthDate>{{ user.birthDate | date('Y-m-d') }}</BirthDate>
                    <Resident>RU</Resident>
                    <SNILS>{{ user.snils }}</SNILS>
                    <Document>
                        <DocName>Паспорт</DocName>
                        <DocSeries>{{ user.passportSerial }}</DocSeries>
                        <DocNumber>{{ user.passportNumber }}</DocNumber>
                        <DocIssuedBy>
                            {{ user.passportIssuance }}
                        </DocIssuedBy>
                        <DocDivision>{{ user.passportCode }}</DocDivision>
                        <DocIssuedDate>{{ user.passportIssuanceDate | date('Y-m-d') }}</DocIssuedDate>
                    </Document>
                </PersonInfo>
                <DriverLicense>
                    <DriverLicenseNumber>{{ user.driverDocNumber }}</DriverLicenseNumber>
                    <DriverLicenseIssuedBy>{{ user.driverDocIssuance }}</DriverLicenseIssuedBy>
                    <DriverLicenseCountry>RU</DriverLicenseCountry>
                    <DriverLicenseIssuedDate>{{ user.driverDocDateStarts | date('Y-m-d') }}</DriverLicenseIssuedDate>
                </DriverLicense>
                <AddressActual>
                    <FullAddress>{{ user.ruDeliveryAdrs }}</FullAddress>
                    <FullAddressLat>{{ user.enDeliveryAdrs }}</FullAddressLat>
                    <PostCode>{{ user.deliveryAdrs.zipcode }}</PostCode>
                    <Country>RU</Country>
                    <Region></Region>
                    <District>{{ user.deliveryAdrs.area }}</District>
                    <DistrictLat></DistrictLat>
                    <Settlement>{{ user.deliveryAdrs.city }}</Settlement>
                    <SettlementLat></SettlementLat>
                    <Street>{{ user.deliveryAdrs.street }}</Street>
                    <StreetLat></StreetLat>
                    <House>{{ user.deliveryAdrs }}, {{ user.deliveryAdrs }}, {{ user.deliveryAdrs }},{{ user.deliveryAdrs }}</House>
                    <HouseLat></HouseLat>
                    <Building/>
                    <BuildingLat/>
                    <Office/>
                    <OfficeLat/>
                </AddressActual>
                <Photo>{{ files.photo.base }}</Photo>
                <Sign>{{ files.signature.base }}</Sign>
            </DriverOrder>
        </Order>
    </ns2:EstrPackage>
{% endspaceless %}