                                <img src="{{ asset('bundles/crmmain/icons/rotateRight.png') }}" id="rotateRight">
                                <img src="{{ asset('bundles/crmmain/icons/crop.png') }}" id="cropImage">
                            </div>
                        </div>
                    </td>
                </tr>
                <tr>
