<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Личный кабинет</title>
    {% block stylesheets %}
        <link href="{{ asset('bundles/crmauth/css/bootstrap.min.css') }}" rel="stylesheet">
    {% endblock %}
    {% if form is defined %}
        {% form_theme form 'CrmAuthBundle:Form:bootstrap_3_layout.html.twig' %}
    {% endif %}
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <div class="container">
        <header>
            <div class="row">
                <div class="col-xs-3">
                    <img src="{{ asset('bundles/crmauth/images/logo.png?2') }}" style="width: 100px"/>
                </div>
                <div class="col-xs-3"></div>
                <div class="col-xs-3"></div>
                <div class="col-xs-3"></div>
            </div>
        </header>
        <div class="row">
            <div class="col-xs-3">
                <div id="sidebar-wrapper">
                    <ul class="sidebar-nav">
                        <li class="sidebar-brand">
                            <a href="#">
                                На главную
                            </a>
                        </li>
                        <li>
                            <a href="#">Заказы</a>
                        </li>
                        <li>
                            <a href="#">Подать еще одну</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-xs-9">
                <h1>{% block title %}{% endblock %}</h1>
                {% block body %}{% endblock %}
            </div>
        </div>
    </div>


{% block javascripts %}
    <script src="{{ asset('bundles/crmauth/js/jquery.min.js') }}"></script>
    <script src="{{ asset('bundles/crmauth/js/bootstrap.min.js') }}"></script>
{% endblock %}
</body>
</html>