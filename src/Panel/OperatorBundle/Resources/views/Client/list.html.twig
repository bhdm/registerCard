{% extends 'PanelOperatorBundle::layout.html.twig' %}


{% block breadcrumb %}
    <ul class="breadcrumb well">
        <li>Список клиентов</li>
        {#<li><a href="{{ path('panel_company_add') }}"><span class="btn btn-primary">Добавить</span></a></li>#}
    </ul>
{% endblock %}

{% block content %}
    <div class="well">
        <table class="table" data-toggle="table"
               data-sort-name="login"
               data-sort-order="asc">
            <thead>
            <tr>
                <th >Название</th>
                <th >Компания</th>
                <th >Кол-во заявок</th>
                <th >Квота</th>
                <th class="setting">Инструменты</th>
            </tr>
            </thead>
            {% for client in clients %}
                <tr style="{{ client.quota < 0 ? 'background: #FFCACA' : 0 }}" >
                    <td><a href="{{ path('panel_client_edit',{'id' : client.id }) }}">{{ client.username }}</a></td>
                    <td>
                        {% if client.company != null %}
                            <a href="{{ path('panel_user_list', {'type' : 'null' , 'company' : client.company.id }) }}">{{ client.company.title }}</a>
                        {% endif %}
                    <td/>
                    <td>
                        {{ client.orders | length }}
                    </td>
                    <td>
                        {{ client.quota }}
                    </td>
                    <td class="setting">
                        {% spaceless %}
                            {#<a href="{{ path('panel_company_quota',{'companyId' : company.id}) }}">#}
                                {#<button type="button" class="btn btn-default btn-warning" title="Квота">#}
                                    {#<span class="glyphicon glyphicon-ruble"></span>#}
                                {#</button>#}
                            {#</a>#}
                            {#&nbsp;&nbsp;#}
                            {#<a href="{{ path('panel_company_edit',{'id' : company.id}) }}">#}
                                {#<button type="button" class="btn btn-default btn-bg" title="Редактировать">#}
                                    {#<span class="glyphicon glyphicon-pencil"></span>#}
                                {#</button>#}
                            {#</a>#}
                            &nbsp;&nbsp;
                            <a href="#">
                                <button type="button" class="btn btn-default btn-danger" title="Удалить">
                                    <span class="glyphicon glyphicon-remove"></span>
                                </button>
                            </a>
                        {% endspaceless %}
                    </td>
                </tr>
            {% endfor%}
        </table>
        {#<div class="navigation">#}
        {#{{ knp_pagination_render(pagination) }}#}
        {#</div>#}
    </div>
{% endblock %}

