<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}?1" />
    {% block title %}
        {% if page is defined and page.title is defined  %}
            <title>{{ page.title }}</title>
        {% else %}
            <title>Карта водителя для тахографа с СКЗИ</title>
        {% endif%}
        {% if page is defined and page.metaDescription is defined  %}
            <meta name="description" content="{{ page.metaDescription }}">
        {% else %}
            <meta name="description" content="Система подачи заявок">
        {% endif%}
        {% if page is defined and page.metaKeyword is defined  %}
            <meta name="keywords" content="{{ page.metaKeyword }}">
        {% else %}
            <meta name="keywords" content="Система подачи заявок">
        {% endif%}
    {% endblock %}

    {% block stylesheets %}
        <link href="//fonts.googleapis.com/css?family=Open+Sans:300italic,300,400italic,400,600italic,600,700italic,700,800italic,800" rel="stylesheet" type="text/css">
        <link href="{{ asset('bundles/crmface/css/common.css') }}" rel="stylesheet" media="all">
        <link href="{{ asset('bundles/crmmain/lib/styler/jquery.formstyler.css') }}" rel="stylesheet" media="all">
    {% endblock %}

    {% block javascripts %}
        <script rel="script" src="{{ asset('bundles/crmmain/javascripts/jQuery.js') }}"></script>
        <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
        <script src="{{ asset('bundles/crmmain/lib/styler/jquery.formstyler.min.js') }}" type="text/javascript"></script>
        <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
        <script>
            jQuery("document").ready(function($){

                var nav = $('.menu');

                $(window).scroll(function () {
                    if ($(this).scrollTop() > 180) {
                        nav.addClass("f-nav");
                    } else {
                        nav.removeClass("f-nav");
                    }
                });

            });
        </script>
    {% endblock %}
</head>
<body>
    <div class="body">
        <div class="logo">
            <table cellpadding="0" cellspacing="0" style="width: 100%; padding: 0 10px">
                <tr>
                    <td>
                        <img src="{{ asset('bundles/crmface/images/logo.png') }}" style="width: 320px">
                    </td>
                    <td style="vertical-align: top">
                        <br />
                        <span class="phone">8 (812) 425 - 12 - 44</span>
                        <span class="workday">пн. - вс. , 8-00 : 22-00</span>
                        <br />
                        <br />
                        <table style="width: 100%;">
                            <tr>
                                <td>
                                    <span style="padding-left: 20px">
                                        <img src="{{ asset('bundles/crmface/icons/vopros.png') }}" style="margin-bottom: -12px;">
                                        <a href="#" class="vopros">Задать вопрос</a>
                                    </span>
                                    <br />
                                    <br />
                                    <br />
                                </td>
                                <td>
                                    <img src="{{ asset('bundles/crmface/images/call.png') }}">
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
            </table>
        </div>
        <div class="menu">
            <ul>
                <li><a href="#">Главная</a></li>
                <li>
                    Подать заявку
                    <ul class="submenu">
                        <li> СКЗИ </li>
