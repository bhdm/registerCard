{% extends 'CrmAuthBundle::layout.html.twig' %}

{% block title %}
    <div style="height: 40px">
    <div style="float: left; padding-right: 10px;">Мои заказы</div>
    <div class="dropdown" style="float: left;">
        <button class="btn btn-primary dropdown-toggle" type="button" id="addOrder" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
            Добавить новый заказ
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" aria-labelledby="addOrder">
            <li><a href="#">СКЗИ</a></li>
            <li><a href="#">ЕСТР</a></li>
            <li><a href="#">РФ</a></li>
        </ul>
    </div>
    </div>
{% endblock %}

{% block body %}
    <div class="row">
        <table class="table">
            <tr>
                <td>Дата заявки</td>
                <td>Фамилия</td>
                <td>Имя</td>
                <td>Отчество</td>
                <td>Тип заявки</td>
                <td>Статус</td>
                <td>Цена</td>
            </tr>
            {% for o in orders %}
                <tr>
                    <td>{{ o.created | date('d.m.y') }}</td>
                    <td>{{ o.lastName  }}</td>
                    <td>{{ o.firstName  }}</td>
                    <td>{{ o.surName  }}</td>
                    <td>{{ o.ru ? 'РФ' : o.estr ? 'ЕСТР' : 'СКЗИ'  }}</td>
                    <td>{{ o.statusStr }}</td>
                    <td>{{ o.price }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7" style="text-align: center" class="text-danger">Заказов карт не найдено</td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}